{
  "editor.wordWrapColumn": 120,
  "editor.rulers": [120],
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "phpfmt.enable_auto_align": true,
  "prettier.useEditorConfig": false
}
